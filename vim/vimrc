" === General Config ===

" === Pathogen ===
call pathogen#runtime_append_all_bundles()
call pathogen#infect()

" mouse
set mouse=a
set ttymouse=xterm2

" font + size
set guifont=Menlo\ Regular:h12

" Line numbers
set number

" turn on syntax highlighting
syntax on

"Reload files changed outside vim
set autoread

" languague dependent indenting
" filetype detection
filetype plugin indent on

" wrapping
set wrap
" break line at words
set linebreak

" === Scroll bar ===
set guioptions-=r
set guioptions-=L

" === Search Settings ===

" Find next match as we type the search
set incsearch

" Highlight searches
" :noh to remove highlighting.
set hlsearch

" maps \<space> to :noh
nnoremap <leader><space> :noh<cr>

" smart case-insensitive searching
set ignorecase
set smartcase

" === Powerline ===
let g:Powerline_symbols = 'fancy'

" === NERDTREE ===
" show hidden files in nerdtree
let NERDTreeShowHidden=1
" auto open nerd tree
" au VimEnter *  NERDTree

" === Swap files ===
set directory=/tmp

" === Folding ===
" fold based on indent
set foldmethod=syntax
" deepest fold is 10 levels
set foldnestmax=10
" don't fold by default
set nofoldenable
" set foldlevel=0

" === DelimitMate ===
" enable <cr> expansion
let g:delimitMate_expand_cr = 1

" === Others ===

set nocompatible
set modelines=0
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set encoding=utf-8
set scrolloff=3
set autoindent
set showmode
set showcmd
set hidden
set wildmenu
set wildmode=list:longest
set visualbell
set cursorline
set ttyfast
set ruler
set backspace=indent,eol,start
set laststatus=2
set undofile

" === TABS ===
" :let g:detectindent_preferred_indent = 4
" :let g:detectindent_preferred_expandtab = 1
" :autocmd BufReadPost * :DetectIndent

" transparency
if has('transparency')
    set transparency=9
    set guioptions=aAce
endif

" use colorscheme
colorscheme solarized
set background=dark
